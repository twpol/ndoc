<project name="NDoc" default="Debug">
	
	<include buildfile="NDoc.build.include" />
	
	<target name="cleanbuild" depends="build">
		<delete verbose="true">
			<fileset basedir="${build.dir}">
				<includes name="*.resources" />
			</fileset>
		</delete>
	</target>
	
	<target name="release" depends="clean">
		<property name="debug" value="false" />
		<call target="cleanbuild" />		
	</target>
	
	<target name="devel" depends="clean">
		<tstamp />
		<property name="devel.name" value="ndoc-devel-${nant.dstamp}.zip" />
	        <delete file="${devel.name}" failonerror="false"/>
		<zip zipfile="..\..\${devel.name}">
			<fileset basedir="..\..">
				<includes name="ndoc\**" />
				<excludes name="ndoc\web\**" />
				<excludes name="ndoc\**\bin\**" />
				<excludes name="ndoc\**\obj\**" />
				<excludes name="ndoc\**\*.suo" />
				<excludes name="ndoc\**\*.user" />
			</fileset>
		</zip>
	</target>
	
	<target name="clean">
		<delete dir="build" failonerror="false" />
		<delete dir="..\examples\docs" failonerror="false" />
	</target>

</project>
